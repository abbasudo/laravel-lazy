	{
		$this->setPermission('{{modelNamePluralLowerCase}}.destroy');
		${{modelNameSingularLowerCase}} = {{modelName}}::factory()->create();

		$this->json('delete', route('client.{{modelNamePluralLowerCase}}.destroy' , ${{modelNameSingularLowerCase}}->id))
			 ->assertStatus(202);
